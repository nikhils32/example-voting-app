pipeline{
    agent any
    
    tools{
      nodejs 'NodeJS 12.8.0'
    }
    stages{
        stage("build"){
            steps{
                echo "Building worker app....."
                dir("result"){
                  sh 'npm install'
               }
            }
        }
        stage("test"){
            when{
                changeset "**/result/**"
            }
            steps{
                echo "Testing worker app....."
                dir("result"){
                  sh 'npm test'
              }
            }
        }
    }
    
    post{
        always{
            echo "This pipeline is completed...."
        }
    }
}
